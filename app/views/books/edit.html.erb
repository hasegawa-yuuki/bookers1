<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path, method: :patch do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <tr>
  <%= f.submit 'Update Book' %>
<% end %>
  </tr>
  <%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>
